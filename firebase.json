{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=3600"
        }]
      }
    ]
  }
}
